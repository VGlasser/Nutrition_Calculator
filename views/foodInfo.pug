html(lang="en")
    head 
        title #{title}
        script(src="/exploreFood.js")
        script.
            var foodList = !{JSON.stringify(foodList)};
            var userAccount = !{JSON.stringify(userAccount)};
            var urlParameters = new URLSearchParams(window.location.search);
            var id = urlParameters.get('id')||0;
            var food = foodList[id];
            var foodProtein = (food['PROTEIN'].NutrientValue);
            console.log(foodProtein);
    body
        include ../partials/Header
        div#main
            style.
                .collapsible {
                    background-color: #222;
                    color: gold;
                    cursor: pointer;
                    padding: 18px;
                    width: 100%;
                    border: none;
                    text-align: left;
                    outline: none;
                    font-size: 15px;
                }
                
                .active, .collapsible:hover {
                    background-color: #444;
                }
                
                .content {
                    padding: 0 18px;
                    display: none;
                    overflow: hidden;
                    background-color: #f1f1f1;
                }
            h1#Name
            button.collapsible(type='button') Macro Nutrients
            .content
                table#Macros
                    tr
                        //- td Calories:
